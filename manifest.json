{
  "manifest_version": 2,
  "name": "Open Top Three",
  "version": "1.1",
  // "homepage": "XXX",
  "icons": {
    "48": "icons/ribbon-48.png"
  },

  "description": "Opens the top search result link on Duckduckgo.",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["*://*.duckduckgo.com/*", "*://*.google.com/search?*"],
    "js": ["/content_scripts/content.js"]
  }],

  "browser_action": {
    "default_icon": "icons/ribbon-32.png",
    "default_title": "Open Top Results"
  },

  "commands":{
      "_execute_browser_action": {
          "suggested_key": {
              "default": "Ctrl+Shift+Y"
          }
      }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "openTopThree@example1.com"
    }
  }
}


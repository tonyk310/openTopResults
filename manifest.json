{
  // "description": "XXX",
  "manifest_version": 2,
  "name": "Open Top Three",
  "version": "1.1",
  // "homepage": "XXX",
  "icons": {
    "48": "icons/ribbon-48.png"
  },

  "description": "Opens the top search result link on Duckduckgo.",

  // Script for the processes of the extension.
  "background": {
    // This throws a warning.
    // "persistent": false,
    "scripts": ["background.js"]
  },

  // Scripts which have access to the active page.
  "content_scripts": [{
    "matches": ["*://*.duckduckgo.com/*", "*://*.google.com/search?*"],
    "js": ["/content_scripts/content.js"]
  }],

  // The button on the firefox browser.
  "browser_action": {
    "default_icon": "icons/ribbon-32.png",
    // "default_popup": "popup/choose_beast.html",
    // maybe i can make this dynamic
    "default_title": "Three"
  },

  "commands":{
      "_execute_browser_action": {
          "suggested_key": {
              "default": "Ctrl+Shift+Y"
          }
      }
  },

  // Allows it to access the current tabs.
  "permissions": [
    "activeTab",
    "storage"
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "openTopThree@example.com"
    }
  }
}

